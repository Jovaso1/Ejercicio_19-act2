package ejercicio_19.act2;

import java.util.Scanner;

public class Ejercicio_19Act2 {

    public static void main(String[] args) {
        // TODO code application logic here
        double lado, perimetro, valor_alt, area_tri;
        Scanner teclado = new Scanner(System.in);
        
        System.out.print("Valor del lado: ");
        lado = teclado.nextDouble();
        perimetro = lado*3;
        valor_alt = Math.pow((Math.pow(lado,2)- Math.pow((lado/2),2)),0.5);
        area_tri = (valor_alt*lado)/2;
               
        System.out.println("El perimetro del triangulo es " + perimetro);
        System.out.println("El valor de la altura del triangulo es " + valor_alt);
        System.out.println("El area del triangulo es " + area_tri);
    }
    
}
